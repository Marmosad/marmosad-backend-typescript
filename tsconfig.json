{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { "*": ["types/*"] },
    "lib": ["es6", "dom"],
    "outDir": "./dist",
    "allowJs": true,
    "module": "commonjs",
    "types": ["reflect-metadata"],
    "target": "es5",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node"
  },
  "include": [
    "./src/**/*",
    "./index.ts"
  ]
}
